@model TravelAgency.Models.TravelPackage

@{
    ViewData["Title"] = "Waiting List";
}

<h2 class="mb-3">Trip Fully Booked</h2>

<div class="alert alert-warning">
    <strong>@Model.Name</strong> is currently fully booked.
</div>

<p>
    You can join the waiting list.  
    If a room becomes available, you will be notified.
</p>

<form asp-controller="WaitingList"
      asp-action="JoinConfirmed"
      method="post">
    
    <input type="hidden" name="tripId" value="@Model.Id" />
    
    <button type="submit" class="btn btn-primary">
        Join Waiting List
    </button>

    <a asp-controller="Trips"
       asp-action="Details"
       asp-route-id="@Model.Id"
       class="btn btn-outline-secondary ms-2">
        Back to Trip
    </a>
</form>
