@using TravelAgency.Models
@{
    ViewData["Title"] = "Home";
}

<!-- FULL-SCREEN HERO -->
<section class="d-flex align-items-center justify-content-center text-white text-center" style="
        height: 100vh;
        background:
            linear-gradient(rgba(0,0,0,.6), rgba(0,0,0,.6)),
            url('/images/hero-travel.jpg') center/cover no-repeat;
    ">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">
            Welcome to <span class="text-danger">NoorAgency</span>
        </h1>

        <p class="lead mb-4">
            Discover, book, and manage unforgettable trips — all in one place.
        </p>

        <a asp-controller="Trips" asp-action="Index" class="btn btn-danger btn-lg px-5">
            Explore Trips
        </a>
    </div>
</section>

<!-- REVIEWS + RATING (LOGGED-IN USERS ONLY) -->
@if (User.Identity?.IsAuthenticated == true)
{
    <section class="py-5 bg-light">
        <div class="container text-center">

            <h3 class="mb-2">What users think about our service?</h3>

            @if ((double)ViewBag.AverageRating > 0)
            {
                <div class="mb-4">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round((double)ViewBag.AverageRating))
                        {
                            <span class="fs-4 text-warning">★</span>
                        }
                        else
                        {
                            <span class="fs-4 text-secondary">★</span>
                        }
                    }
                    <div class="text-muted mt-1">
                        Average rating: @ViewBag.AverageRating.ToString("0.0") / 5
                    </div>
                </div>
            }

            @if (!((List<ServiceReview>)ViewBag.ServiceReviews).Any())
            {
                <p class="text-muted">No reviews yet.</p>
            }
            else
            {
                <div class="row justify-content-center mb-4">
                    @foreach (var r in (List<ServiceReview>)ViewBag.ServiceReviews)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="border rounded p-3 h-100 bg-white">
                                <div class="fw-semibold">
                                    Rating: @r.Rating / 5
                                </div>
                                <p class="text-muted mb-0">@r.Comment</p>
                            </div>
                        </div>
                    }
                </div>
            }

            <hr class="my-5" />

            <h4 class="mb-3">Rate our service</h4>

            @if (User.Identity?.IsAuthenticated == true && !(bool)ViewBag.HasReviewed)
            {
                <form asp-controller="ServiceReviews" asp-action="Create" method="post" class="mx-auto"
                    style="max-width: 500px;">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <select name="rating" class="form-select" required>
                            <option value="">Select rating</option>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Comment</label>
                        <textarea name="comment" class="form-control" rows="3"></textarea>
                    </div>

                    <button class="btn btn-danger px-4">
                        Submit Feedback
                    </button>
                </form>
            }
            else if (User.Identity?.IsAuthenticated == true)
            {
                <p class="text-muted text-center mt-4">
                    You have already rated our service. Thank you!
                </p>
            }
        </div>
    </section>
}