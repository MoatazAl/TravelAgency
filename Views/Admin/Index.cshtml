@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Admin Dashboard</h2>
        <span class="badge bg-danger">Admin Mode</span>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-3 text-center shadow-sm">
                <div class="text-muted">Trips</div>
                <div class="fs-3 fw-bold">@ViewBag.TotalTrips</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center shadow-sm">
                <div class="text-muted">Bookings</div>
                <div class="fs-3 fw-bold">@ViewBag.TotalBookings</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center shadow-sm">
                <div class="text-muted">Waiting List</div>
                <div class="fs-3 fw-bold">@ViewBag.WaitingEntries</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center shadow-sm">
                <div class="text-muted">Users</div>
                <div class="fs-3 fw-bold">@ViewBag.TotalUsers</div>
            </div>
        </div>
    </div>

    <div class="list-group shadow-sm">
        <a asp-controller="AdminPackages" asp-action="Index"
           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Manage Travel Packages
            <span class="badge bg-secondary">CRUD + discounts</span>
        </a>

        <a asp-controller="AdminBookings" asp-action="Index"
           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Bookings & Waiting List
            <span class="badge bg-secondary">monitor</span>
        </a>

        <a asp-controller="AdminUsers" asp-action="Index"
           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Manage Users
            <span class="badge bg-secondary">status + history</span>
        </a>
    </div>
</div>
