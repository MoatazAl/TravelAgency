@model List<TravelAgency.Models.TravelPackage>
@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Packages</h2>

    <input type="text" id="packageSearch" class="form-control" placeholder="Search packages..."
        style="max-width: 260px;">
</div>

<table class="table" id="packagesTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Dates</th>
            <th>Price</th>
            <th>Rooms</th>
            <th>Visible</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.StartDate.ToShortDateString() - @p.EndDate.ToShortDateString()</td>
                <td>
                    @if (p.DiscountedPrice != null)
                    {
                        <del>@p.BasePrice</del>
                        <strong>@p.DiscountedPrice</strong>
                    }
                    else
                    {
                        @p.BasePrice
                    }
                </td>
                <td>@p.AvailableRooms / @p.TotalRooms</td>
                <td>
                    <span class="badge @(p.IsVisible ? "bg-success" : "bg-secondary")">
                        @(p.IsVisible ? "Visible" : "Hidden")
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">
                        Edit
                    </a>

                    <form asp-action="ToggleVisibility" asp-route-id="@p.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()

                        <button class="btn btn-sm @(p.IsVisible ? "btn-outline-warning" : "btn-outline-success")">
                            @(p.IsVisible ? "Hide" : "Show")
                        </button>
                    </form>

                    <a asp-controller="AdminBookings" asp-action="WaitingList" asp-route-tripId="@p.Id"
                        class="btn btn-sm btn-outline-dark">
                        Waiting List
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById("packageSearch").addEventListener("input", function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll("#packagesTable tbody tr");

            rows.forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? "" : "none";
            });
        });
    </script>
}