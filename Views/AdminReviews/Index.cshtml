@{
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Reviews Management</h2>

<h4 class="mt-3">Trip Reviews</h4>

@if (!((IEnumerable<dynamic>)ViewBag.TripReviews).Any())
{
    <div class="alert alert-info">No trip reviews yet.</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>User</th>
                <th>Trip</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in ViewBag.TripReviews)
        {
            <tr>
                <td>@r.UserEmail</td>
                <td>@r.TripName</td>
                <td>@r.Rating</td>
                <td>@r.Comment</td>
                <td>@r.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
}

