@{
    Layout = "_AdminLayout";
}

@model IEnumerable<TravelAgency.Models.ViewModels.WaitingListAdminVM>

<h2 class="mb-4">Waiting List</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Waiting list is empty.
    </div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Trip</th>
                <th>User</th>
                <th>Position</th>
                <th>Requested At</th>
                <th>Available Rooms</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TripTitle</td>
                <td>@item.UserEmail</td>
                <td>#@item.Position</td>
                <td>@item.RequestedAt.ToString("dd MMM yyyy HH:mm")</td>
                <td>@item.AvailableRooms</td>
                <td>
                    @if (item.AvailableRooms > 0)
                    {
                        <span class="badge bg-success">
                            Will be auto-promoted
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            Waiting
                        </span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
